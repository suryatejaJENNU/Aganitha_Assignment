# Port on which the backend API runs
PORT=4000

# Base URL for generating short links
BASE_URL=http://localhost:4000

# PostgreSQL connection string
# Replace USER, PASSWORD, HOST, PORT, and DBNAME with your actual values.
DATABASE_URL=postgres://USER:PASSWORD@HOST:PORT/DBNAME?sslmode=require&channel_binding=require

# Application environment (development/production)
NODE_ENV=development
